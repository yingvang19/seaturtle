        <form class="donors" action="POST">
          <div class="form-group">
            <label for="example-text">Donor Name</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Donor Name Here">
          </div>
          <div class="form-group">
            <label for="example-description">Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Donation Description Here"></textarea>
          </div>
          <div class="form-group">
            <label for="example-email">Donor Email</label>
            <input type="text" id="example-email" class="form-control" aria-describedby="example-text" placeholder="Enter Donor Email Here">
          </div>
          <div class="form-group">
            <label for="example-amount">Donation Amount</label>
            <input type="text" id="example-amount" class="form-control" aria-describedby="example-text" placeholder="Enter Donation Amount Here">
          </div>
          <div class="form-group">
            <label for="example-number">Donor Phone Number</label>
            <input type="text" id="example-number" class="form-control" aria-describedby="example-text" placeholder="Enter Donor Phone Number Here">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Donors:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.name}}</a>
             <button class="btn btn-danger float-right delete">DELETE</button>
           <a href="example/edit/{{this.id}}">
             
           <button class="btn btn-default float-right edit" data-id={{this.id}}>EDIT</button>
           </a> 
          
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

